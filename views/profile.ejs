    <!-- Card 1 -->
    <div class="col-lg-12 col-lg-4 mb-4">
        <div class="card1">
            <div class="card-body">
                <img src="/images/highered.jpeg" class="card-img-top text-center" alt="alpha-image1">
                <h5 class="card-title">Being a leader and impacting the lives of others is what I truly enjoy doing.
                </h5>
                <p class="card-text">I've had many leadership positions with more to come later.</p>
            </div>
            <div class="card-body">

                <form method="POST" action="insert/">
                    <input name="title">
                    <input name="post">
                    <button class="btn btn-primary" role="submit">new post</button>
                </form>


                <% profileData.forEach(result=> { %>
                    <div class="col-md-8">


                        <form method="POST" action="update/">
                            <input name="updateTitle" value="<%= result.title %>">
                            <input name="updatePost" value="<%= result.post %>">
                            <input type="hidden" name="updateId" value="<%=result._id %>">
                            <button class="btn btn-primary" role="submit"><i class="bi bi-pencil"></i></button>
                        </form>

                        <form method="POST" action="delete/">
                            <input type="hidden" name="deleteId" value="<%=result._id %>">
                            <button class="btn btn-primary" role="submit"><i class="bi bi-trash3"></i></button>
                        </form>
                    </div>
                    <% }); %>

            </div>
        </div>
    </div>
</body>

